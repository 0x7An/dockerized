FROM alpine:3.11.3
MAINTAINER Zhang Huangbin <zhb@iredmail.org>
EXPOSE 7777 7778 7779

ARG SCRIPTS_DIR=/docker/scripts

RUN mkdir -p ${SCRIPTS_DIR}
COPY ./scripts/add_user_iredapd.sh ${SCRIPTS_DIR}/

RUN /bin/sh ${SCRIPTS_DIR}/add_user_iredapd.sh && \
    rm -rf ${SCRIPTS_DIR}

RUN apk add --no-cache --progress py3-sqlalchemy py3-dnspython py3-mysqlclient py3-pip py3-more-itertools py3-six py3-markdown && \
    wget -c https://github.com/iredmail/iRedAPD/archive/4.0.tar.gz && \
    tar xzf 4.0.tar.gz -C /opt && \
    rm -f 4.0.tar.gz && \
    ln -sf /opt/iRedAPD-4.0 /opt/iredapd && \
    /usr/bin/pip3 install --no-cache-dir web.py==0.40 && \
    rm -rf /root/.cache

COPY ./config/opt/iRedAPD-4.0/. /opt/iRedAPD-4.0/
COPY ./entrypoints/iredapd.sh /entrypoint.sh

CMD /bin/sh /entrypoint.sh
